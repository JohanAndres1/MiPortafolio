---
import IconsItem from '../components/IconItem.astro';

interface Props {
  date: string;
  title: string;
  company: string;
  description: string;
  link?: string;
  technology?: string[];
}

const { title, company, description, date, link, technology } = Astro.props;
---

<div
  class="relative mx-12 grid before:absolute before:left-[-35px] before:block before:h-full before:border-l-2 before:border-gray-400/70 before:content-[''] md:grid-cols-5 md:gap-10"
>
  <div class="pb-4 md:col-span-2">
    <div class="sticky top-12">
      <span
        class="text-indigo-700 dark:text-indigo-300 -left-[42px] absolute rounded-full text-5xl"
        >&bull;</span
      >
      <h3 class="text-xl font-bold text-indigo-700/80 dark:text-indigo-300/90">
        {title}
      </h3>
      <h4 class="font-semibold text-xl text-gray-600 dark:text-white">
        {company}
      </h4>
      <time class="p-0 m-0 text-sm text-gray-600/80 dark:text-white/80"
        >{date}</time
      >
    </div>
  </div>
  <div class="flex gap-2 pb-6 text-balance text-gray-600 dark:text-gray-200 md:col-span-3 max-lg:flex-col">
    {description}
    {
      link && (
        <a
          href={link}
          class="inline-flex items-center mt-3 px-3 py-1 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-sky-600 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-200 focus:text-blue-700"
        >
          Saber m√°s...{' '}
          <svg
            class="w-3 h-3 ms-2 rtl:rotate-180"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 14 10"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M1 5h12m0 0L9 1m4 4L9 9"
            />
          </svg>
        </a>
      )
    }
    {technology && (
      <div class="flex self-start md:flex-wrap gap-2">
        {technology.map(tech => (
          <IconsItem icon={tech} />
        ))}
      </div>
    )}
  </div>
</div>
